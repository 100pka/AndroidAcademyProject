                    app:layout_constraintBottom_toBottomOf="@+id/movie_2_poster"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/movie_2_age_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/tenet_age_limit"
                    style="@style/movie_list_age_limit"
                    android:gravity="center"
                    android:background="@drawable/ic_age_limit_background"/>

                <ImageView
                    android:id="@+id/movie_2_like"
                    android:layout_width="16dp"
                    android:layout_height="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_like_on"
                    android:alpha="0.75"/>

                <TextView
                    android:id="@+id/movie_2_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginVertical="214dp"
                    android:text="@string/action_sci_fi_thriller"
                    style="@style/movie_list_genre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.stopkaaaa.androidacademyproject.RatingBarSvg
                    android:id="@+id/movie_2_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginStart="@dimen/double_min_value_margin"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    style="@style/MoviesRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/movie_2_reviews_count"
                    app:layout_constraintBottom_toBottomOf="@+id/movie_2_reviews_count"/>

                <TextView
                    android:id="@+id/movie_2_reviews_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/tenet_reviews"
                    style="@style/movie_list_reviews_count"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toEndOf="@+id/movie_2_rating"
                    app:layout_constraintTop_toBottomOf="@+id/movie_2_genre" />

                <TextView
                    android:id="@+id/movie_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tenet"
                    android:layout_marginTop="@dimen/double_min_value_margin"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    style="@style/movie_list_movie_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_2_poster" />

                <TextView
                    android:id="@+id/movie_2_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tenet_duration"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginBottom="@dimen/double_min_value_margin"
                    style="@style/movie_list_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_2_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

