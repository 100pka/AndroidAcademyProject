                    style="@style/movie_list_duration"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginBottom="@dimen/double_min_value_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_3_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/movie_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/movie_3"
            app:layout_constraintEnd_toStartOf="@+id/end_margin_guideline"
            app:layout_constraintStart_toStartOf="@+id/movie_2"
            app:layout_constraintTop_toTopOf="@id/movie_3"
            app:cardCornerRadius="8dp"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:cardBackgroundColor="@color/background"
