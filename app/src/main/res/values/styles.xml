<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="AppTheme" parent="Theme.Design.NoActionBar" />

    <style name="movie_details_movie_title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:shadowColor">@color/title_shadow</item>
        <item name="android:textSize">@dimen/movie_details_title</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:lineHeight">40sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="movie_details_actors_names">
        <item name="android:textColor">@color/white_secondary</item>
        <item name="android:textSize">@dimen/movie_details_actors_name_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="movie_details_storyline_title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/movie_details_normal_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="movie_details_cast_title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/movie_details_normal_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="movie_details_storyline_body">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/movie_details_normal_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="movie_details_reviews_count">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/movie_details_normal_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="movie_details_genre">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/movie_details_normal_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="movie_details_age_limit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/movie_details_actors_name_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">14sp</item>
        <item name="android:textFontWeight">900</item>
    </style>

    <style name="movie_details_back">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/movie_details_actors_name_text_size</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
</resources>