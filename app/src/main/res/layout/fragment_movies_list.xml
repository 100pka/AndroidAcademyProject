<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <ImageView
            android:id="@+id/ic_aim"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/horizontal_screen_boarders_margin"
            android:layout_marginTop="@dimen/back_arrow_top_margin"
            app:layout_constraintEnd_toStartOf="@+id/movie_list_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_aim" />

        <TextView
            android:id="@+id/movie_list_title"
            style="@style/movie_list_fragment_title"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/double_min_value_margin"
            android:layout_marginTop="55dp"
            android:text="@string/movie_list"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/ic_aim"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_margin_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_margin_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/movie_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="@dimen/movie_list_posters_margin"
            android:layout_marginBottom="@dimen/movie_list_posters_margin"
            app:layout_constraintBottom_toTopOf="@+id/movie_3"
            app:layout_constraintEnd_toStartOf="@+id/movie_2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/start_margin_guideline"
            app:layout_constraintTop_toBottomOf="@id/movie_list_title"
            app:cardCornerRadius="8dp"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:cardBackgroundColor="@color/background"
            app:strokeColor="@color/stroke_line_color"
            app:strokeWidth="1dp"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/movie_list_card_background">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/movie_1_poster"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avengers_end_game_poster"
                    app:shapeAppearance="@style/MovieList_Poster_Image"
                    app:layout_constraintBottom_toTopOf="@+id/movie_1_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/movie_1_poster_gradient"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/background_poster_gradient"
                    app:layout_constraintBottom_toBottomOf="@+id/movie_1_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/movie_1_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginVertical="214dp"
                    android:text="@string/action_adventure_drama"
                    style="@style/movie_list_genre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/movie_1_age_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/avengers_age_limit"
                    style="@style/movie_list_age_limit"
                    android:gravity="center"
                    android:background="@drawable/ic_age_limit_background"/>

                <ImageView
                    android:id="@+id/movie_1_like"
                    android:layout_width="16dp"
                    android:layout_height="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_like_off"
                    android:alpha="0.75"/>

                <com.stopkaaaa.androidacademyproject.RatingBarSvg
                    android:id="@+id/movie_1_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginStart="@dimen/double_min_value_margin"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1"
                    style="@style/MoviesRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/movie_1_reviews_count"
                    app:layout_constraintBottom_toBottomOf="@+id/movie_1_reviews_count"/>

                <TextView
                    android:id="@+id/movie_1_reviews_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/reviews_count"
                    style="@style/movie_list_reviews_count"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toEndOf="@+id/movie_1_rating"
                    app:layout_constraintTop_toBottomOf="@+id/movie_1_genre" />

                <TextView
                    android:id="@+id/movie_1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avengers_end_game_movie_list"
                    android:layout_marginTop="@dimen/double_min_value_margin"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    style="@style/movie_list_movie_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_1_poster" />

                <TextView
                    android:id="@+id/movie_1_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginBottom="@dimen/double_min_value_margin"
                    android:text="@string/avengers_duration"
                    style="@style/movie_list_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_1_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/movie_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/movie_1"
            app:layout_constraintEnd_toStartOf="@+id/end_margin_guideline"
            app:layout_constraintStart_toEndOf="@+id/movie_1"
            app:layout_constraintTop_toTopOf="@id/movie_1"
