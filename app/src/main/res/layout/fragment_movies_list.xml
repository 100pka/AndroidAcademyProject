                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_like_off"
                    android:alpha="0.75"/>

                <TextView
                    android:id="@+id/movie_3_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    android:layout_marginVertical="214dp"
                    android:text="@string/action_adventure_sci_fi"
                    style="@style/movie_list_genre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.stopkaaaa.androidacademyproject.RatingBarSvg
                    android:id="@+id/movie_3_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginStart="@dimen/double_min_value_margin"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1"
                    style="@style/MoviesRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/movie_3_reviews_count"
                    app:layout_constraintBottom_toBottomOf="@+id/movie_3_reviews_count"/>

                <TextView
                    android:id="@+id/movie_3_reviews_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/widow_reviews"
                    style="@style/movie_list_reviews_count"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toEndOf="@+id/movie_3_rating"
                    app:layout_constraintTop_toBottomOf="@+id/movie_3_genre" />

                <TextView
                    android:id="@+id/movie_3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/black_widow"
                    android:layout_marginTop="@dimen/double_min_value_margin"
                    android:layout_marginHorizontal="@dimen/double_min_value_margin"
                    style="@style/movie_list_movie_title"
                    app:layout_constraintStart_toStartOf="parent"
